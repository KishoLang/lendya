<div class="dashboard-header"> Your Bookings </div>

<div class="dashboard-outline">
  <div class="bookings-column">
    <% @bookings.each do |booking| %>
      <%= link_to dashboard_path(booking_id: booking.id), class: "booking-link" do %>
        <div class="booking-list-item <%= "border border-light" if booking == @booking %>">
          <h6><%= booking.item.title %> (<%= booking.item.category %>)</h6>
          <p>Click for Booking Information <%= booking.item.user.first_name %></p>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="chat-window">
    <div class="info-container">
      <div class="product-info">
        <div class="booking-img-container">
        <% if @booking.item.photo.key.nil? %>
          <img class="booking-img" src="https://images.unsplash.com/photo-1572981779307-38b8cabb2407?crop=entropy&cs=tinysrgb&fm=jpg&ixlib=rb-1.2.1&q=80&raw_url=true&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1332" alt="">
        <% else %>
          <%= cl_image_tag @booking.item.photo.key, class: "booking-img" %>
        <% end %>
      </div>
      </div>

      <div class="info-box">
        <h4 class="mt-5"> <%= @booking.item.title %> </h4>
          <div class="key-data">
            <div class="key-item"><p style="font-size: 20px"><%= @booking.item.category %> </p></div>
            <div><p style="font-size: 20px"><%= @booking.item.condition %></p></div>
            <div><p style="color:orange; font-size: 26px"><%= @booking.item.price %>â‚¬</div>
          </div>
        <div><p class="dashboard-description"><%= @booking.item.description %></p></div>


        <div><input type="checkbox" id="long_rental" name="long_rental" value="long_rental">
          <label for="long_rental">Long Rental possible</label><br>
        </div>
        <div><input type="checkbox" id="availability" name="availability" value="availability">
          <label for="availability">Currently Available</label><br>
        </div>
        <div class="button-group justify-content-center align-items-center m-5">
          <div> <%= link_to 'Rate Booking', new_booking_review_path(@booking), :class => "nav-button-lender btn btn-info sized" %>
          </div>
          <div> <%= link_to 'Cancel Booking', booking_path(@booking), method: :delete, :class => "nav-button-lender btn btn-info sized" %>
          </div>
        </div>
      </div>
    </div>

  </div>

