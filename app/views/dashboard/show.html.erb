<div class="dashboard-header"> Your Bookings </div>

<div class="dashboard-outline">
  <div class="bookings-column">
    <% @bookings.each do |booking| %>
      <%= link_to dashboard_path(booking_id: booking.id) do %>
        <div class="booking-list-item <%= "border border-light" if booking == @booking %>">
          <h6><%= @booking.item.title %> (<%= @booking.item.category %>)</h6>
          <p>Click for Booking Information <%= @booking.item.user.first_name %></p>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="chat-window">
    <div class="info-box">
      <h4> Your Booking</h4>

      <h6>Booking Details</h6>
      <p>Item Name: <%= @booking.item.title %> </p>
      <p>Item Price: <%= @booking.item.price %></p>
      <p>Start Date: <%= @booking.start_date %></p>
      <p>End Date:<%= @booking.end_date %></p>
    </div>

    <div class="button-group justify-content-center align-items-center m-4">
    <div> <%= link_to 'Rate Booking', root_path, :class => "nav-button-lender btn btn-info sized" %>
    </div>
    <div> <%= link_to 'Cancel Booking', booking_path(@booking), method: :delete, :class => "nav-button-lender btn btn-info sized" %>
    </div>
    </div>

    <div class="button-group justify-content-center align-items-center m-4">
    <div> <%= link_to 'Find more Items', items_path, :class => "nav-button-lender btn btn-info sized" %>
    </div>
    <div> <%= link_to 'Return to Home', root_path, :class => "nav-button-lender btn btn-info sized" %>
    </div>
    </div>

    </div>
  </div>

</div>
