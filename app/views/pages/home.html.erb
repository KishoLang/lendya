<div class="homeHeadContent">
  <div class="navbar navbar-expand-lg navbar-light">
    <div class="navbar-brand">
      <img src="<%= image_path "lendya-logo-yellow.png" %>" alt="Lendya Logo" class="brand-logo">
    </div>
    <div class="d-flex justify-content-end align-items-center m-4">
      <%= link_to 'Become a lender', new_item_path, :class => "nav-button-lender btn btn-info" %>
      <% if user_signed_in? %>
      <!--<%= current_user.email %>-->
        <%= link_to 'SIGN OUT', destroy_user_session_path, method: 'delete', :class => "nav-text" %>
      <% else %>
        <%= link_to 'SIGN UP', new_user_registration_path, :class => "nav-text" %>
        <%= link_to 'LOGIN', new_user_session_path, :class => "nav-text"%>
      <% end %>
    </div>
  </div>
  <div class="mainClaimText">
    <h1><strong>No need to buy - We lendya anything</strong></h1>
    <p>Rent from reviewed neighborhood lenders</p>
  </div>
  <div class="container-search-bar">
   <%= form_tag items_path, :class => "search-bar", method: :get do %>
    <%= text_field_tag :query,
    params[:query],
    class: "form-control search-input",
    placeholder: "What do you need?"
    %>
    <%= submit_tag "Search", class: "nav-button-lender btn btn-info" %>
  <% end %>
  </div>
</div>

<div class="product-info-container">
  <div class="product-info-header">
    <h1>Three reasons to rent with lendya</h1>
  </div>
  <div class="product-info-cards-container">
    <div class="card d-inline-flex p-2 m-2 text-center" style="width: 30rem;">
      <img class="product-card-img" src="<%= image_path "nature.jpg" %>" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title">It's eco friendly</h5>
          <p class="card-text">Our planet needs a break from over production! Make a small contribution to help our environment</p>
      </div>
    </div>
    <div class="card d-inline-flex p-2 m-2 text-center" style="width: 30rem;">
      <img class="product-card-img" src="<%= image_path "moneypig.jpg" %>" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title">Save money</h5>
          <p class="card-text">We buy and own to many things we actually don't need! Save some money by renting</p>
      </div>
    </div>
    <div class="card d-inline-flex p-2 m-2 text-center" style="width: 30rem;">
      <img class="product-card-img" src="<%= image_path "idea.jpg" %>" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title">Get inspired</h5>
          <p class="card-text">Not sure if a product is right for you? Get inspired, fall in love and return it if it's not for you</p>
      </div>
    </div>
  </div>
  <div class="overlay">
  <video class="intro-video" playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
    <source src="<%= image_path "lendyaintro.mp4" %>" type="video/mp4">
  </video>
  <div class="overlay-text-container">
    <div class="overlay-text">
      <%= form_tag items_path, :class => "search-bar", method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control search-input",
        placeholder: "What do you need?"
        %>
      <%= submit_tag "Search", class: "nav-button-lender btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>
</div>
