<!-- Load JS -->
<%= javascript_pack_tag 'button_scroller', defer: true %>

<!-- HTML -->
<div class="homeHeadContent">
  <div class="navbar navbar-expand-lg navbar-light">
    <div class="navbar-brand">
      <img src="<%= image_path "lendya-logo-yellow.png" %>" alt="Lendya Logo" class="brand-logo">
    </div>
    <div class="d-flex justify-content-end align-items-center m-4">
      <%= link_to 'Become a lender', new_item_path, :class => "nav-button-lender btn btn-info" %>
      <% if user_signed_in? %>
      <!--<%= current_user.email %>-->
        <%= link_to 'MANAGE BOOKINGS', dashboard_path, :class => "nav-text" %>
        <%= link_to 'SIGN OUT', destroy_user_session_path, method: 'delete', :class => "nav-text" %>
      <% else %>
        <%= link_to 'SIGN UP', new_user_registration_path, :class => "nav-text" %>
        <%= link_to 'LOGIN', new_user_session_path, :class => "nav-text"%>
      <% end %>
    </div>
  </div>
  <div class="mainClaimText">
    <p><strong>No need to buy - We <span class="lendya-span">lendya</span> anything</strong></p>
    <p class="second-header"><strong>Rent from reviewed neighborhood lenders</strong></p>
  </div>
  <div class="container-search-bar">
   <%= form_tag items_path, :class => "search-bar", method: :get do %>
    <%= text_field_tag :query,
    params[:query],
    class: "form-control search-input",
    placeholder: "What do you need today?"
    %>
    <%= submit_tag "Search", class: "nav-button-lender btn btn-info" %>
  <% end %>
  </div>
</div>

<div class="product-info-container">
  <div class="product-info-header">
    <p><strong>Three reasons to rent with <span class="lendya-span">lendya</span></strong></p>
  </div>
  <div class="product-info-cards-container">
    <div class="card d-inline-flex p-2 m-2 text-center" style="width: 30rem;">
      <img class="product-card-img" src="<%= image_path "nature.jpg" %>" alt="Card image cap">
      <div class="card-body">
        <p class="card-title"><strong>It's eco friendly &#129716;
</strong></p>
          <p class="card-text"><strong>Our planet needs a break from over production! Make a small contribution to help our environment</strong></p>
      </div>
    </div>
    <div class="card d-inline-flex p-2 m-2 text-center" style="width: 30rem;">
      <img class="product-card-img" src="<%= image_path "moneypig.jpg" %>" alt="Card image cap">
      <div class="card-body">
        <p class="card-title"><strong>Save money &#128184;</strong></p>
          <p class="card-text"><strong>We buy and own to many things we actually don't need! Save some money by renting</strong></p>
      </div>
    </div>
    <div class="card d-inline-flex p-2 m-2 text-center" style="width: 30rem;">
      <img class="product-card-img" src="<%= image_path "idea.jpg" %>" alt="Card image cap">
      <div class="card-body">
        <p class="card-title"><strong>Get inspired &#128161;</strong></p>
          <p class="card-text"><strong>Not sure if a product is right for you? Get inspired, fall in love and return it if it's not for you</strong></p>
      </div>
    </div>
  </div>
  <div class="overlay">
  <video class="intro-video" playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
    <source src="<%= image_path "lendyaintro.mp4" %>" type="video/mp4">
  </video>
  <div class="overlay-text-container">
    <div class="overlay-text">
      <%= form_tag items_path, :class => "search-bar", method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control search-input",
        placeholder: "What do you need?"
        %>
      <%= submit_tag "Search", class: "nav-button-lender btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>

<button type="button" class="btn btn-info btn-floating btn-lg" id="btn-back-to-top">
  <i class="fas fa-arrow-up" style="color: white;"></i>
</button>

</div>
